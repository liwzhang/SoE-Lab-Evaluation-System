<h1>Welcome Professor <% if current_user %> <%= current_user.name %> <% end %></h1>

<%- #logged in, session found -%>
<% if current_user %>

  <%= link_to 'Sign Out', destroy_user_session_path,
    method: :delete %>

  <h3>My Sections</h3>

  <table>
    <thead>
      <tr>
        <th>Class Number</th>
        <th>Subject</th>
        <th>Catalog</th>
        <th>Title</th>
        <th>Section</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody>
      <% @my_sections.each do |section| %>
        <tr>
          <td><%= section.class_num %></td>
          <td><%= section.subject %></td>
          <td><%= section.catalog %></td>
          <td><%= section.title %></td>
          <td><%= section.section %></td>
          <td><%= section.completed %>/<%= section.enrolled%> </td>
        </tr>
      <% end %>
    </tbody>
  </table>


<%- #not logged in, no session found %>
<% else %>
<div class = "professor">
  <%= link_to 'Sign Up', new_user_registration_path %>

  <%= link_to 'Sign In', new_user_session_path %>
</div>
<% end %>
