<%- #logged in, session found -%>
<% if current_user %>

  <h3>My Sections</h3>

  <table>
    <thead>
      <tr>
        <th>Class Number</th>
        <th>Subject</th>
        <th>Catalog</th>
        <th>Title</th>
        <th>Section</th>
        <th>Status</th>
        <th>Export</th>
      </tr>
    </thead>

    <tbody>
      <% @my_sections.each do |section| %>
        <tr>
          <td><%= section.class_num %></td>
          <td><%= section.subject %></td>
          <td><%= section.catalog %></td>
          <td><%= section.title %></td>
          <td><%= section.section %></td>
          <td><%= section.completed %>/<%= section.enrolled%> </td>
          <td><% if(!section.completed.nil? and section.completed >= 0) %> <%= link_to 'Export', section_path(section, format: :csv) %>
              <% else %>Export<% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%- #not logged in, no session found %>
<% else %>

<h2 id = 'instructions'>Professors please sign in to see your sections.<br><br>
    If you do not yet have an account, then please sign up with your SCU email.<br><br>
    </h2>

<% end %>
