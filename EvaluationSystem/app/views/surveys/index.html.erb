<% if (current_user && current_user.admin) #CHANGE THIS TO FALSE DURING DEPLOYMENT/PRODUCTION PHASE %>

  <p id="notice"><%= notice %></p>

  <h1>Surveys</h1>

  <table>
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Student Email</th>
        <th>Class Num</th>
        <th>Survey ID</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @surveys.each do |survey| %>
        <tr>
          <td><%= survey.student_ID %></td>
          <td><%= survey.student_email %></td>
          <td><%= survey.class_num %></td>
          <td><%= survey.survey_ID %></td>
          <td><%= survey.status %></td>
          <td><%= link_to 'Show', survey %></td>
          <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
          <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Survey', new_survey_path %> | 
  <%= link_to 'Back', root_url %>


<% else %>

    <h3>Error: You do not have access to this page.</h3>
    <%= link_to 'Back', root_url %>

<% end %>