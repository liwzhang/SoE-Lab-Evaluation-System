<% if(current_user && current_user.admin)%>
<div class= uploader-title>
<h1>Uploader</h1>
<p>This is just to upload files</p>
</div>
<div class= uploader>
<%= form_with(url: '/uploader', method: 'post', multipart: true) do %>
<div class= upload-form>
  <div class = 'upload-section'>
    <div class = 'section'>
      <%= file_field_tag 'file', accept: '.csv'  %>
    </div>
    <div class = 'upload-section'>
      Pick what type<br>
      Classes <%= radio_button_tag(:listc, "classes") %>
      Roster <%= radio_button_tag(:listc, "roster") %>
     </div>
     <div class = 'upload-section'>
       <%= submit_tag("Submit") %>
      </div>
    </div>
  </div>
</div>
<% end %>

<% else %>

    <%= render file: 'public/403-1.html' %>

<% end %>
