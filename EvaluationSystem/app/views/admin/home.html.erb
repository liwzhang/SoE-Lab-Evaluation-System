<h1>Admin Home</h1>

<%- #logged in, session found -%>
<% if current_user %>

  <%- #current_user has admin rights %>
  <% if current_user.admin %>

    <%= link_to 'TA Evaluation Questions', questions_path, class: 'aHomeButton' %>

    <%= link_to 'Lab Sections Information', sections_path, class: 'aHomeButton' %>

    <%= link_to 'Update Roster', new_uploader_path, class: 'aHomeButton' %>

    <%= link_to 'Set Email Reminder Dates', 'email', class: 'aHomeButton' %>

  <%- #current_user is not an admin, get em outta here %>
  <% else %>

    <h3> Error, you do not have access to this page (Requires Admin Permissions)</h3>
    <%= button_to 'Return to My sections', root_url, class: 'aHomeButton' %>

  <% end %>

<%- #not logged in, no session found %>
<% else %>

  <%= link_to 'Sign Up', new_user_registration_path %>

  <%= link_to 'Sign In', new_user_session_path %>

<% end %>
